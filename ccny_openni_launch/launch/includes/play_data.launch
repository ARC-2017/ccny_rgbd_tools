<launch>

  <arg name="path"/>
  <arg name="bag_name"/>
  <arg name="delay"/>
  <arg name="rate" default="1"/>

  <node pkg="rosbag" type="play" name="play" output="screen"
    args="$(arg path)/$(arg bag_name) --clock --loop --start=0.0 --queue=1000 -d $(arg delay) --rate=$(arg rate)">

  </node>

</launch>
